<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.catface996.aiops.repository.mysql.mapper.auth.SessionMapper">

    <!-- 根据用户ID查询会话 -->
    <select id="selectByUserId" resultType="com.catface996.aiops.repository.mysql.po.auth.SessionPO">
        SELECT id, user_id, token, expires_at, device_info, created_at
        FROM t_session
        WHERE user_id = #{userId}
        ORDER BY created_at DESC
        LIMIT 1
    </select>

    <!-- 根据用户ID删除会话 -->
    <delete id="deleteByUserId">
        DELETE FROM t_session
        WHERE user_id = #{userId}
    </delete>

    <!-- 删除所有过期会话 -->
    <delete id="deleteExpiredSessions">
        DELETE FROM t_session
        WHERE expires_at &lt; NOW()
    </delete>

</mapper>
